<%= form_for @song do |f| %>
  <div class="actions">
    Artist: <%= f.text_field :artist %>
    Title: <%= f.text_field :title %>
    Your Name: <%= f.text_field :recommender %>
    What color should Stephen's lights be when he listens to this song? <%= f.color_field :color, value: "#ff4750" %>
    <%= f.submit class: "btn", value: "Send your recommendation!" %>
  </div>
<% end %>
